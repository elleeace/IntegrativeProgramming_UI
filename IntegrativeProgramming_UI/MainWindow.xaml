<Window x:Class="IntegrativeProgramming_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IntegrativeProgramming_UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1500" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="600"/>
        </Grid.ColumnDefinitions>

        <!--LEFT GRID FOR DISPLAY-->
        <Grid Grid.Column="0" Background="#292d37">
            <Grid Margin="150">
                <Grid.RowDefinitions>
                    <RowDefinition Height="250"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Vertical" VerticalAlignment="Center">
                    <TextBlock Grid.Row="0" Text="Northville University"
                       FontSize="55" Foreground="White" VerticalAlignment="Center"
                           FontWeight="Bold" FontFamily="Inter"/>

                    <TextBlock Grid.Row="0" Text="Library System"
                         FontSize="35" Foreground="White" VerticalAlignment="Center"
                             FontWeight="Light" FontFamily="Inter"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Orientation="Vertical">
                    <Grid Height="80">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Ellipse Grid.Column="0" Margin="15" Fill="White"/>
                        <Label Grid.Column="1" Content="Create" FontSize="25"
                               Foreground="White" FontFamily="Inter"
                               VerticalAlignment="Center" Margin="20,0,0,0"/>
                    </Grid>

                    <Grid Height="80">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Ellipse Grid.Column="0" Margin="15" Fill="White"/>
                        <Label Grid.Column="1" Content="Read" FontSize="25"
            Foreground="White" FontFamily="Inter"
            VerticalAlignment="Center" Margin="20,0,0,0"/>
                    </Grid>

                    <Grid Height="80">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Ellipse Grid.Column="0" Margin="15" Fill="White"/>
                        <Label Grid.Column="1" Content="Update" FontSize="25"
            Foreground="White" FontFamily="Inter"
            VerticalAlignment="Center" Margin="20,0,0,0"/>
                    </Grid>

                    <Grid Height="80">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Ellipse Grid.Column="0" Margin="15" Fill="White"/>
                        <Label Grid.Column="1" Content="Delete" FontSize="25"
Foreground="White" FontFamily="Inter"
VerticalAlignment="Center" Margin="20,0,0,0"/>
                    </Grid>
                </StackPanel>

            </Grid>
        </Grid>

        <!--RIGHT GRID FOR LOGIN-->
        <Grid Grid.Column="1" Background="#ebf1ff">
            <Grid.RowDefinitions>
                <RowDefinition Height="200"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="150"/>
            </Grid.RowDefinitions>

            <!--Login Header-->
            <Grid Grid.Row="0" Margin="40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Ellipse Grid.Column="0" Height="50" Fill="#292d37"/>
                    <Label Grid.Column="1" Foreground="Black"
                           Content="BSIT-2A" FontSize="25"
                           Margin="5,0,0,0" FontWeight="DemiBold"
                           VerticalAlignment="Center"/>
                </Grid>
                
            </Grid>

            <!--Login Block-->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="300"/>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Content="Log In"
                       FontFamily="Inter" FontSize="35" Margin="50,0,0,0"
                       FontWeight="Bold" VerticalAlignment="Center"/>

                <StackPanel Grid.Row="1" Orientation="Vertical" Margin="50" VerticalAlignment="Center">
                    <Grid Height="100" Background="White">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="35"/>
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Label Background="#ebf1ff" Grid.Row="0" Content="Username" FontFamily="Inter"
                               FontSize="20" Margin="0,0,0,0"/>

                        <TextBox x:Name="tbUsername" Grid.Row="1" 
                                   VerticalAlignment="Center" FontFamily="Inter"
                           FontSize="20" Margin="5,0,0,0" Foreground="DarkGray" Height="44" Text="libHelena"/>
                    </Grid>

                    <Grid Height="100" Background="White">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="35"/>
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Label Background="#ebf1ff" Grid.Row="0" Content="Password" FontFamily="Inter"
            FontSize="20" Margin="0,0,0,0"/>

                        <TextBox x:Name="tbPassword" Grid.Row="1" 
                VerticalAlignment="Center" FontFamily="Inter"
        FontSize="20" Margin="5,0,0,0" Foreground="DarkGray" Height="44" Text="hkg123"/>
                    </Grid>
                </StackPanel>

                <Button x:Name="btnLogin" Grid.Row="2" VerticalAlignment="Center" Height="50"
                        Width="500" Background="#26ad7c" Content="Login"
                        Foreground="White" FontFamily="Inter" FontSize="20"
                        FontWeight="DemiBold" Click="login_btn_Click"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
