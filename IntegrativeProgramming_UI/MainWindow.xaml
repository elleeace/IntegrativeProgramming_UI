<Window x:Class="IntegrativeProgramming_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Northville University Library System" 
        Height="700" Width="1100" 
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True">

    <Window.Resources>
        <!-- Light Theme Colors -->
        <Color x:Key="LightBackground">#f5f7fa</Color>
        <Color x:Key="LightPanel">#ffffff</Color>
        <Color x:Key="LightText">#2d3748</Color>
        <Color x:Key="LightAccent">#26ad7c</Color>
        <Color x:Key="LightSecondary">#e2e8f0</Color>

        <!-- Dark Theme Colors -->
        <Color x:Key="DarkBackground">#292d37</Color>
        <Color x:Key="DarkPanel">#1a202c</Color>
        <Color x:Key="DarkText">#f7fafc</Color>
        <Color x:Key="DarkAccent">#38b2ac</Color>
        <Color x:Key="DarkSecondary">#4a5568</Color>

        <!-- Dynamic Brushes -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="{DynamicResource LightBackground}"/>
        <SolidColorBrush x:Key="PanelBrush" Color="{DynamicResource LightPanel}"/>
        <SolidColorBrush x:Key="TextBrush" Color="{DynamicResource LightText}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{DynamicResource LightAccent}"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="{DynamicResource LightSecondary}"/>

        <!-- Styles -->
        <Style x:Key="LoginButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Inter"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="InputFieldStyle" TargetType="Grid">
            <Setter Property="Background" Value="{DynamicResource PanelBrush}"/>
            <Setter Property="Margin" Value="0,15,0,0"/>
            <Setter Property="Height" Value="70"/>
        </Style>

        <Style x:Key="InputLabelStyle" TargetType="Label">
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="FontFamily" Value="Inter"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="FontFamily" Value="Inter"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
    </Window.Resources>

    <Border Background="{DynamicResource BackgroundBrush}" CornerRadius="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel (Branding) -->
            <Border Grid.Column="0" Background="#292d37" 
                    CornerRadius="10,0,0,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel VerticalAlignment="Center" Margin="40">
                        <TextBlock Text="Northville University" 
                                   FontSize="36" FontWeight="Bold" 
                                   Foreground="White" FontFamily="Inter"/>
                        <TextBlock Text="Library System" 
                                   FontSize="24" FontWeight="Light" 
                                   Foreground="White" FontFamily="Inter" Margin="0,10,0,0"/>

                        <StackPanel Margin="0,40,0,0">
                            <StackPanel Orientation="Horizontal" Margin="0,15">
                                <Ellipse Width="20" Height="20" Fill="White"/>
                                <TextBlock Text="Create, Read, Update, Delete" 
                                           Foreground="White" FontSize="16" 
                                           Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,15">
                                <Ellipse Width="20" Height="20" Fill="White"/>
                                <TextBlock Text="Student and Faculty Portal" 
                                           Foreground="White" FontSize="16" 
                                           Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,15">
                                <Ellipse Width="20" Height="20" Fill="White"/>
                                <TextBlock Text="Real-time Data Management" 
                                           Foreground="White" FontSize="16" 
                                           Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <!-- Theme Toggle -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" 
                                HorizontalAlignment="Right" Margin="20">
                        <TextBlock Text="Dark" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ToggleButton x:Name="ThemeToggle" Width="50" Height="25" 
                                     VerticalAlignment="Center" Checked="ThemeToggle_Checked" 
                                     Unchecked="ThemeToggle_Unchecked">
                            <ToggleButton.Template>
                                <ControlTemplate TargetType="ToggleButton">
                                    <Border Background="{DynamicResource SecondaryBrush}" 
                                            CornerRadius="12.5">
                                        <Grid>
                                            <Ellipse x:Name="ToggleKnob" Fill="White" 
                                                     HorizontalAlignment="Left" 
                                                     Width="25" Height="25" 
                                                     Margin="0,0,0,0"/>
                                        </Grid>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="ToggleKnob" Property="HorizontalAlignment" Value="Right"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </ToggleButton.Template>
                        </ToggleButton>
                        <TextBlock Text="Light" Foreground="White" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Right Panel (Login Form) -->
            <Border Grid.Column="1" Background="{DynamicResource PanelBrush}" 
                    CornerRadius="0,10,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <StackPanel Grid.Row="0" Margin="30,40,30,20">
                        <TextBlock Text="Welcome Back!" 
                                   FontSize="28" FontWeight="Bold" 
                                   Foreground="{DynamicResource TextBrush}" 
                                   FontFamily="Inter"/>
                        <TextBlock Text="Please login to continue" 
                                   FontSize="16" 
                                   Foreground="{DynamicResource TextBrush}" 
                                   Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- Form -->
                    <StackPanel Grid.Row="1" Margin="30,0,30,0" VerticalAlignment="Center" Height="370">
                        <Grid Style="{StaticResource InputFieldStyle}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Label Content="Username" Style="{StaticResource InputLabelStyle}"/>
                            <TextBox x:Name="tbUsername" Grid.Row="1" Style="{StaticResource InputTextBoxStyle}" 
                                     Text="libHelena"/>
                        </Grid>

                        <Grid Style="{StaticResource InputFieldStyle}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Label Content="Password" Style="{StaticResource InputLabelStyle}"/>
                            <TextBox x:Name="tbPassword" Grid.Row="1" 
                                        FontFamily="Inter" FontSize="16" 
                                        BorderThickness="0" Padding="10,5" 
                                        Background="Transparent" 
                                        Foreground="{DynamicResource TextBrush}"/>
                        </Grid>

                        <Button x:Name="btnLogin" Content="Login" 
                                Style="{StaticResource LoginButtonStyle}" 
                                Margin="0,30,0,0" Height="50" Click="btnLogin_Click"/>
                    </StackPanel>

                    <!-- Footer -->
                  
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>