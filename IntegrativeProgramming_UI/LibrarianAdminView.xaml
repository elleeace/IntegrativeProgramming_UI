<Window x:Class="IntegrativeProgramming_UI.LibrarianAdminView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IntegrativeProgramming_UI"
        mc:Ignorable="d"
        Title="LibrarianAdminView" Height="800" Width="1500" Background="#1d1f26" WindowStartupLocation="CenterScreen">

        <Window.Resources>
            <Style x:Key="SidebarButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="10"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="Margin" Value="0,2"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" Margin="{TemplateBinding Padding}"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#313743"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="AccentButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="#26ad7c"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="15,8"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#218e66"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="ActionButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="#22252d"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Width" Value="100"/>
                <Setter Property="Height" Value="100"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#313743"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#313743"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
        </Style>
    </Window.Resources>

        <Grid>
            <Grid.ColumnDefinitions>
                <!-- Sidebar -->
                <ColumnDefinition Width="Auto" x:Name="SidebarColumn" />
                <!-- Main Content Area -->
                <ColumnDefinition Width="*" />
                <!-- Form Panel (initially hidden) -->
                <ColumnDefinition Width="0" x:Name="FormPanelColumn" />
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Grid Grid.Column="0" Background="#1d1f26" Width="220" x:Name="Sidebar">
                <Grid.RowDefinitions>
                    <RowDefinition Height="100" />
                    <RowDefinition Height="200" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Header - Library Name and Toggle Button -->
                <Grid Grid.Row="0" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Margin="5,0,0,0" Text="Northville Library" FontWeight="Bold" VerticalAlignment="Center" Foreground="White" />
                    <Button Grid.Column="1" Background="Transparent" BorderThickness="0" Click="ToggleSidebar">
                    <Path Data="M3,12 L21,12 M3,6 L21,6 M3,18 L21,18" Stroke="White" StrokeThickness="2" Width="20" Height="20" Margin="0,0,10,0" />
                </Button>
                </Grid>

                <!-- User Profile Section -->
                <StackPanel Grid.Row="1" Margin="10,20">
                    <Ellipse Width="80" Height="80" Fill="White" HorizontalAlignment="Center" />
                    <TextBlock x:Name="tbUsername" Text="IbWelcomeUser" HorizontalAlignment="Center" Margin="0,10" Foreground="White" />
                </StackPanel>

                <!-- Navigation Menu -->
                <StackPanel Grid.Row="2" Margin="10,20">
                    <Button x:Name="btnHome" Style="{StaticResource SidebarButtonStyle}" Click="btnHome_Click">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,25" HorizontalAlignment="Left">
                            <Path Data="M3,12 L21,12 M3,6 L21,6 M3,18 L21,18" Stroke="White" StrokeThickness="2" Width="20" Height="20" Margin="0,0,10,0" />
                            <TextBlock Text="Home" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Button>
                <Button x:Name="btnCatalog" Style="{StaticResource SidebarButtonStyle}" Click="btnCatalog_Click">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,25">
                            <Path Data="M5,3 H19 V21 H5 Z" Stroke="White" StrokeThickness="2" Width="20" Height="20" Margin="0,0,10,0" />
                            <TextBlock Text="Catalog" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                <Button x:Name="btnLogs" Style="{StaticResource SidebarButtonStyle}" Margin="0,0,0,25" Click="btnLogs_Click">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M4,2 H20 V22 H4 Z M8,6 H16 M8,10 H16 M8,14 H12" Stroke="White" StrokeThickness="2" Width="20" Height="20" Margin="0,0,10,0" />
                            <TextBlock Text="Logs" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                <Button x:Name="btnManage" Style="{StaticResource SidebarButtonStyle}" Margin="0,0,0,25" Click="btnManage_Click">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M12,2 A5,5 0 0 1 12,12 A5,5 0 0 1 12,2 M2,22 A10,10 0 0 1 22,22" Stroke="White" StrokeThickness="2" Width="20" Height="20" Margin="0,0,10,0" />
                            <TextBlock Text="Manage" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Logout Button -->
                <Button x:Name="btnLogOut" Grid.Row="3" Style="{StaticResource AccentButtonStyle}" Margin="10,20" Content="Log out" Click="btnLogOut_Click" />
            </Grid>

            <!-- Collapsed Sidebar (icons only) -->
            <Grid Grid.Column="0" Background="#1d1f26" Width="60" x:Name="CollapsedSidebar" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Toggle Button -->
                <Button Grid.Row="0" Background="Transparent" BorderThickness="0" HorizontalAlignment="Right" Margin="10" Click="ExpandSidebar">
                    <Path Data="M6,6 L16,16 M6,16 L16,6" Stroke="White" StrokeThickness="2" />
                </Button>

                <!-- User Profile Icon -->
                <Ellipse Grid.Row="1" Width="40" Height="40" Fill="White" Margin="10" />

                <!-- Navigation Icons -->
                <StackPanel Grid.Row="2" Margin="10,20">
                    <Button Style="{StaticResource SidebarButtonStyle}" Padding="5">
                        <Path Data="M3,12 L21,12 M3,6 L21,6 M3,18 L21,18" Stroke="White" StrokeThickness="2" Width="20" Height="20" />
                    </Button>
                    <Button Style="{StaticResource SidebarButtonStyle}" Padding="5">
                        <Path Data="M5,3 H19 V21 H5 Z" Stroke="White" StrokeThickness="2" Width="20" Height="20" />
                    </Button>
                    <Button Style="{StaticResource SidebarButtonStyle}" Padding="5">
                        <Path Data="M4,2 H20 V22 H4 Z M8,6 H16 M8,10 H16 M8,14 H12" Stroke="White" StrokeThickness="2" Width="20" Height="20" />
                    </Button>
                    <Button Style="{StaticResource SidebarButtonStyle}" Padding="5">
                        <Path Data="M12,2 A5,5 0 0 1 12,12 A5,5 0 0 1 12,2 M2,22 A10,10 0 0 1 22,22" Stroke="White" StrokeThickness="2" Width="20" Height="20" />
                    </Button>
                </StackPanel>

                <!-- Logout Icon -->
                <Button Grid.Row="3" Style="{StaticResource AccentButtonStyle}" Margin="10,20" Padding="5">
                    <Path Data="M15,3 H19 V21 H15 M15,12 L3,12 M8,7 L3,12 L8,17" Stroke="White" StrokeThickness="2" Width="20" Height="20" />
                </Button>
            </Grid>

            <!-- Main Content Area -->
            <Grid Grid.Column="1" Background="#22252d" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Top Section (2x2 Grid) -->
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Search Section -->
                    <Border Grid.Row="0" Grid.Column="0" Background="#313743" Margin="5" Padding="15" CornerRadius="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="SEARCH" FontWeight="Bold" Foreground="White" Margin="0,0,0,10" />
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" Background="#1d1f26" Foreground="White" BorderThickness="0" Padding="10" />
                                <Button Grid.Column="1" Style="{StaticResource AccentButtonStyle}" Margin="5,0,0,0" Click="btnSearch_Click">
                                    <Path Data="M15,15 L21,21 M10,17 A7,7 0 1 1 10,3 A7,7 0 0 1 10,17" Stroke="White" StrokeThickness="2" />
                                </Button>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- Summary Section -->
                    <Border Grid.Row="0" Grid.Column="1" Background="#313743" Margin="5" Padding="15" CornerRadius="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Summary" FontWeight="Bold" Foreground="White" Margin="0,0,0,10" />
                            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                                <Border Background="#1d1f26" Width="125" Height="60" Margin="5" CornerRadius="3">
                                    <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="2" Foreground="White" HorizontalAlignment="Center" FontSize="18" FontWeight="Bold" />
                                    <TextBlock Text="Visits" Foreground="White" HorizontalAlignment="Center" FontSize="10" />
                                    </StackPanel>
                                </Border>
                            <Border Background="#1d1f26" Width="125" Height="60" Margin="5" CornerRadius="3">
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="2" Foreground="White" HorizontalAlignment="Center" FontSize="18" FontWeight="Bold" />
                                    <TextBlock Text="Visits" Foreground="White" HorizontalAlignment="Center" FontSize="10" />
                                </StackPanel>
                            </Border>
                            <Border Background="#1d1f26" Width="125" Height="60" Margin="5" CornerRadius="3">
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="2" Foreground="White" HorizontalAlignment="Center" FontSize="18" FontWeight="Bold" />
                                    <TextBlock Text="Visits" Foreground="White" HorizontalAlignment="Center" FontSize="10" />
                                </StackPanel>
                            </Border>
                        </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Main Actions Section -->
                    <Border Grid.Row="1" Grid.Column="0" Background="#313743" Margin="5" Padding="15" CornerRadius="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Main Actions" Foreground="White" FontWeight="Bold" Margin="0,0,0,10" />
                     
                        <StackPanel x:Name="spMainActions"  Grid.Row="1" Orientation="Horizontal">
                            <Button x:Name="btnAction1" Style="{StaticResource ActionButtonStyle}" Margin="5" Width ="185" Background="#FF1D1F26" BorderBrush="#6A5ACD" BorderThickness="0,0,0,3">
                                <TextBlock x:Name="lblButtonAction1" Text="Button Label" Foreground="#6A5ACD" Margin="0,10,0,0" />
                            </Button>
                            <Button x:Name="btnAction2" Style="{StaticResource ActionButtonStyle}" Margin="5" Width ="185" Background="#FF1D1F26" BorderBrush="#26ad7c" BorderThickness="0,0,0,3">
                                        <TextBlock x:Name="lblButtonAction2" Text="Button Label" Foreground="#26ad7c" Margin="0,10,0,0" />
                                  
                                </Button>
                            <Button x:Name="btnAction3" Style="{StaticResource ActionButtonStyle}" Margin="5" Width ="185" Background="#FF1D1F26" BorderBrush="#FFA500" BorderThickness="0,0,0,3">
                                        <TextBlock x:Name="lblButtonAction3" Text="Button Label" Foreground="#FFA500" Margin="0,10,0,0" />
                                    
                                </Button>
                            <Button x:Name="btnAction4" Style="{StaticResource ActionButtonStyle}" Margin="5" Width ="185" Background="#FF1D1F26" BorderBrush="#78adde" BorderThickness="0,0,0,3">
                                <TextBlock x:Name="lblButtonAction4" Text="Button Label" Foreground="#78adde" Margin="0,10,0,0" />
                            </Button>
                        </StackPanel>
                        </Grid>
                    </Border>

                    <!-- More Actions Section -->
                    <Border Grid.Row="1" Grid.Column="1" Background="#313743" Margin="5" Padding="15" CornerRadius="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Foreground="White" Text="More Actions" FontWeight="Bold" Margin="0,0,0,10" />
                            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                                
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Data Viewer Header -->
            <StackPanel Grid.Row="1" Orientation="Horizontal">
                <Label x:Name ="tbTitle" Foreground="White" Grid.Row="1" Content   ="Data Viewer" FontWeight="Bold" Margin="15" />
            </StackPanel>

            <!-- DataGrid -->
                <Border Grid.Row="2" Background="#313743" Margin="5" CornerRadius="5">
                <DataGrid x:Name="dgDataGrid"
                   AutoGenerateColumns="True"
                   HeadersVisibility="Column"
                   CanUserAddRows="False"
                   Background="#22252d"
                   RowBackground="Transparent"
                   AlternatingRowBackground="#2a2f3a"
                   Foreground="White"
                   GridLinesVisibility="None"
                   BorderThickness="0"
                   FontSize="10"
                  IsReadOnly="True"
                   HorizontalGridLinesBrush="Transparent"
                   VerticalGridLinesBrush="Transparent"
                   SelectedItem="{Binding SelectedItem}"
                   SelectionUnit="FullRow"
                   Margin="10,10,10,10">

                    <!-- Style: Selected Row Color -->
                    <DataGrid.Resources>
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#78adde"/>
                        <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#313743"/>
                    </DataGrid.Resources>

                    <!-- Row Style: Background stays dark, selected row changes -->
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="HorizontalAlignment" Value="Stretch"/>
                            <Setter Property="Padding" Value="5"/>
                            <Setter Property="SnapsToDevicePixels" Value="True"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.Columns>
                        <!-- Text Columns with Left Alignment -->
                        

                        <!-- Action Column -->
                        <DataGridTemplateColumn Header="Actions" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    
                                        <Button x:Name ="btnEdit" Content="✎" Width="30" Height="25"
                                    Background="#78adde" Foreground="Black" BorderThickness="0"
                                    ToolTip="Edit" Margin="10"
                                    Click="OnEditClick"
                                    Tag="{Binding}" />

                                        <Button x:Name ="btnDelete" Content="🗑" Width="30" Height="25"
                                    Background="#ff4d4d" Foreground="White" BorderThickness="0"
                                    ToolTip="Delete" Margin="10"
                                    Click="OnDeleteClick"
        Tag="{Binding}" />

                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
            </Grid>

        <!-- Form Panel (Hidden initially) -->
        <Border Grid.Column="2" Background="#313743" x:Name="FormPanel" Visibility="Collapsed">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Form Header and Close Button -->
                <Grid Grid.Row="0" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Foreground="White" Text="Information or Form Panel" FontWeight="Bold" />
                    <Button Grid.Column="1" Background="Transparent" BorderThickness="0" Click="HideFormPanel">
                        <Path Data="M6,6 L16,16 M6,16 L16,6" Stroke="White" StrokeThickness="2" />
                    </Button>
                </Grid>

                <!-- Form Content -->
                <StackPanel x:Name="spFormFields"  Grid.Row="1" Margin="10">
                    <!-- Dynamic Population-->
                </StackPanel>

            </Grid>
        </Border>
    </Grid>
</Window>