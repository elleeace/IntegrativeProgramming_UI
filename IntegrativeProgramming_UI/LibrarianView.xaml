<Window x:Class="IntegrativeProgramming_UI.LibrarianView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IntegrativeProgramming_UI"
        mc:Ignorable="d"
        Title="LibrarianView" Height="1000" Width="1500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--Co-->
        <Grid Grid.Column="0" Background="#0865b8">
            <Grid.RowDefinitions>
                <RowDefinition Height="300"/>
                <RowDefinition/>
                <RowDefinition Height="150"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>

                <Ellipse Grid.Row="0" Fill="White" Height="150" Width="150"/>
                <Label Grid.Row="1" Content="Welcome, User" Foreground="White"
                       HorizontalAlignment="Center" FontSize="25"/>
            </Grid>

            <Grid Grid.Row="1" Margin="40">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid Margin="10" Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="75"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Ellipse Grid.Column="0" Fill="White" Width="35" Height="35"/>
                    <Button Grid.Column="1" Content="Home"
                            Width="150" Height="45" Background="Transparent"
                            Foreground="White" BorderBrush="Transparent"
                            FontSize="20" FontWeight="DemiBold"
                            HorizontalAlignment="Left"/>
                </Grid>

                <Grid Margin="10" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="75"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Ellipse Grid.Column="0" Fill="White" Width="35" Height="35"/>
                    <Button Grid.Column="1" Content="Catalog"
            Width="150" Height="45" Background="Transparent"
            Foreground="White" BorderBrush="Transparent"
            FontSize="20" FontWeight="DemiBold"/>
                </Grid>

                <Grid Margin="10" Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="75"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Ellipse Grid.Column="0" Fill="White"  Width="35" Height="35"/>
                    <Button Grid.Column="1" Content="Users"
Width="150" Height="45" Background="Transparent"
Foreground="White" BorderBrush="Transparent"
FontSize="20" FontWeight="DemiBold"/>
                </Grid>

                <Grid Margin="10" Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="75"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Ellipse Grid.Column="0" Fill="White" Width="35" Height="35"/>
                    <Button Grid.Column="1" Content="Courses"
Width="150" Height="45" Background="Transparent"
Foreground="White" BorderBrush="Transparent"
FontSize="20" FontWeight="DemiBold"/>
                </Grid>

                <Grid Margin="10" Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="75"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Ellipse Grid.Column="0" Fill="White"  Width="35" Height="35"/>
                    <Button Grid.Column="1" Content="Payment"
Width="150" Height="45" Background="Transparent"
Foreground="White" BorderBrush="Transparent"
FontSize="20" FontWeight="DemiBold"/>
                </Grid>

                <Grid Margin="10" Grid.Row="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="75"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Ellipse Grid.Column="0" Fill="White"  Width="35" Height="35"/>
                    <Button Grid.Column="1" Content="Fines"
Width="150" Height="45" Background="Transparent"
Foreground="White" BorderBrush="Transparent"
FontSize="20" FontWeight="DemiBold"/>
                </Grid>

            </Grid>

            <Grid Grid.Row="2">
                <Button Height="50" Width="200" Background="#ff914d"
                        Foreground="White" Content="Log out"
                        FontSize="20" FontWeight="DemiBold"/>
            </Grid>
        </Grid>

        <Grid Grid.Column="1" Background="#ebf1ff">
            <Grid.RowDefinitions>
                <RowDefinition Height="250"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="850"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" Margin="35">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Button Width="300" Height="300" Background="#0865b8" BorderThickness="0" Cursor="Hand"
        HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Button.Resources>
                                <!-- Optional: Icon as PathGeometry or ImageSource can go here -->
                            </Button.Resources>

                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="20" Background="{TemplateBinding Background}">
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <!-- Icon: can be an image or a Path -->
                                            <Image Source="Assets/book_icon.png" Width="40" Height="40" HorizontalAlignment="Center"/>

                                            <!-- Text Label -->
                                            <TextBlock Text="Borrow Book" FontSize="16" Foreground="White"
                               Margin="10 10 10 0" TextAlignment="Center" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                    </Grid>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>

    </Grid>
</Window>
